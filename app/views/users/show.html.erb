<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %><br>
  Has made <%= @user.ratings.size %> ratings <br>
  <% if not @user.ratings.empty? %>
  with average rating <%= @user.average_rating %>
  <% end %>
</p>

<p>
  <strong>Ratings:</strong>
  <ul>
    <% @user.ratings.each do |rating| %>
      <li>
        <%= rating %>
        <% if @user == current_user %>
            <%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' if current_user %>
        <% end %>
      </li>
    <% end %>
  </ul>
</p>

<p>
  <strong>Favorites:</strong><br>
  Beer: <%= @user.favorite_beer %><br>
  Style: <%= @user.favorite_style %><br>
  Brewery: <%= @user.favorite_brewery %>
</p>

<p>
  <strong>Memberships:</strong>
  <ul>
    <% @user.memberships.each do |membership| %>
    <li>
      <%= membership.name %>
    </li>
    <% end %>
  </ul>
</p>

<%= edit_and_destroy_buttons(@style) %>